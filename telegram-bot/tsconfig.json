{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": [
      "DOM",
      "ES5"
    ],
    "types": [
      "node"
    ],
    "outDir": "./dist",
    "strictFunctionTypes": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "importHelpers": true,
    "alwaysStrict": true,
    "sourceMap": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "./src/*.js",
    "./src/*.ts"
  ],
  "exclude": [
    "./node_modules"
  ]
}
